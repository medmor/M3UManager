<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="M3UManager.Views.PipWindow"
             Title="Now Playing"
             BackgroundColor="Transparent">
    
    <Border x:Name="pipContainer"
            BackgroundColor="Black"
            StrokeThickness="2"
            Stroke="#007ACC"
            StrokeShape="RoundRectangle 8"
            Margin="0">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Media Player -->
            <toolkit:MediaElement x:Name="mediaElement"
                                  Grid.Row="0"
                                  ShouldShowPlaybackControls="False"
                                  ShouldAutoPlay="True"
                                  ShouldKeepScreenOn="True"
                                  BackgroundColor="Black" />

            <!-- Custom Controls Overlay -->
            <Grid Grid.Row="0" 
                  x:Name="controlsOverlay"
                  IsVisible="True">
                <Grid.GestureRecognizers>
                    <PointerGestureRecognizer PointerMoved="OnPointerMoved" 
                                             PointerEntered="OnPointerEntered"
                                             PointerExited="OnPointerExited" />
                </Grid.GestureRecognizers>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Gradient Background -->
                <BoxView Grid.RowSpan="3"
                         Opacity="0.9">
                    <BoxView.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#DD000000" Offset="0.0" />
                            <GradientStop Color="#AA000000" Offset="0.5" />
                            <GradientStop Color="#DD000000" Offset="1.0" />
                        </LinearGradientBrush>
                    </BoxView.Background>
                </BoxView>

                <!-- Top Bar with Channel Name -->
                <Border Grid.Row="0"
                        BackgroundColor="#33FFFFFF"
                        StrokeThickness="0"
                        Padding="12,8"
                        Margin="8,8,8,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Label x:Name="channelNameLabel"
                           Text="Channel Name"
                           TextColor="White"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                </Border>

                <!-- Center Play/Pause Button -->
                <Border Grid.Row="1"
                        BackgroundColor="#55FFFFFF"
                        StrokeThickness="0"
                        WidthRequest="60"
                        HeightRequest="60"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="30" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.6" Radius="10" Offset="0,2" />
                    </Border.Shadow>
                    <Button x:Name="playPauseButton"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="32"
                            Text="â¸"
                            Clicked="OnPlayPauseClicked"
                            WidthRequest="60"
                            HeightRequest="60"
                            Padding="0"
                            BorderWidth="0" />
                </Border>

                <!-- Bottom Controls -->
                <Grid Grid.Row="2" Margin="8,0,8,8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Progress Bar -->
                    <Border Grid.Row="0" 
                            BackgroundColor="#22FFFFFF"
                            Padding="10,6"
                            Margin="0,0,0,8">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6" />
                        </Border.StrokeShape>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0"
                                   x:Name="currentTimeLabel"
                                   Text="00:00"
                                   TextColor="White"
                                   FontSize="11"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   Margin="0,0,8,0" />

                            <Slider Grid.Column="1"
                                    x:Name="progressSlider"
                                    Minimum="0"
                                    Maximum="100"
                                    Value="0"
                                    ThumbColor="White"
                                    MinimumTrackColor="#007ACC"
                                    MaximumTrackColor="#555555"
                                    DragStarted="OnProgressDragStarted"
                                    ValueChanged="OnProgressChanged"
                                    DragCompleted="OnProgressDragCompleted" />

                            <Label Grid.Column="2"
                                   x:Name="durationLabel"
                                   Text="00:00"
                                   TextColor="White"
                                   FontSize="11"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   Margin="8,0,0,0" />
                        </Grid>
                    </Border>

                    <!-- Control Buttons -->
                    <HorizontalStackLayout Grid.Row="1"
                                          HorizontalOptions="Center"
                                          Spacing="6">
                        
                        <Border BackgroundColor="#44FFFFFF"
                                StrokeThickness="0"
                                Padding="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6" />
                            </Border.StrokeShape>
                            <Button Text="âª"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    FontSize="16"
                                    Clicked="OnRewind10Clicked"
                                    WidthRequest="36"
                                    HeightRequest="36"
                                    Padding="0"
                                    BorderWidth="0" />
                        </Border>

                        <Border BackgroundColor="#44FFFFFF"
                                StrokeThickness="0"
                                Padding="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6" />
                            </Border.StrokeShape>
                            <Button Text="â©"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    FontSize="16"
                                    Clicked="OnForward10Clicked"
                                    WidthRequest="36"
                                    HeightRequest="36"
                                    Padding="0"
                                    BorderWidth="0" />
                        </Border>

                        <Border BackgroundColor="#44FFFFFF"
                                StrokeThickness="0"
                                Padding="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6" />
                            </Border.StrokeShape>
                            <Button x:Name="volumeButton"
                                    Text="ðŸ”Š"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    FontSize="16"
                                    Clicked="OnVolumeClicked"
                                    WidthRequest="36"
                                    HeightRequest="36"
                                    Padding="0"
                                    BorderWidth="0" />
                        </Border>

                        <Border BackgroundColor="#44007ACC"
                                StrokeThickness="0"
                                Padding="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6" />
                            </Border.StrokeShape>
                            <Button Text="â›¶"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    FontSize="16"
                                    Clicked="OnExpandClicked"
                                    WidthRequest="36"
                                    HeightRequest="36"
                                    Padding="0"
                                    BorderWidth="0" />
                        </Border>

                        <Border BackgroundColor="#DC3545"
                                StrokeThickness="0"
                                Padding="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6" />
                            </Border.StrokeShape>
                            <Button Text="âœ•"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    FontSize="16"
                                    Clicked="OnCloseClicked"
                                    WidthRequest="36"
                                    HeightRequest="36"
                                    Padding="0"
                                    BorderWidth="0" />
                        </Border>
                    </HorizontalStackLayout>
                </Grid>
            </Grid>

            <!-- Drag Handle Bar -->
            <Grid Grid.Row="1"
                  x:Name="dragHandle"
                  BackgroundColor="#1E1E1E"
                  Padding="8,4">
                <Grid.GestureRecognizers>
                    <PanGestureRecognizer PanUpdated="OnDragHandlePan" />
                </Grid.GestureRecognizers>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       x:Name="pipChannelLabel"
                       Text="Channel Name"
                       TextColor="White"
                       FontSize="12"
                       VerticalOptions="Center"
                       LineBreakMode="TailTruncation" />

                <HorizontalStackLayout Grid.Column="1" Spacing="4">
                    <Label Text="â‹®â‹®"
                           TextColor="White"
                           FontSize="12"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Grid>
        </Grid>
    </Border>
</ContentPage>
