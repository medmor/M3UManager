<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:rcl="clr-namespace:M3UManager.UI;assembly=M3UManager.UI"
             xmlns:views="clr-namespace:M3UManager.Views"
             x:Class="M3UManager.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Grid>
        <!-- Main Blazor Content -->
        <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html">
            <BlazorWebView.RootComponents>
                <RootComponent Selector="#app" ComponentType="{x:Type rcl:Main}" />
            </BlazorWebView.RootComponents>
        </BlazorWebView>

        <!-- PiP Player Overlay -->
        <views:PipPlayerView x:Name="pipPlayer" />
    </Grid>

</ContentPage>