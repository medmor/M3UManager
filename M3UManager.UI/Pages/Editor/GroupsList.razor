<div id="parent-row" class="row" style="height:calc(100vh - (100px));">
    <div class="col-4 card" style="height:100%;">
        <input class="form-control mb-1" placeholder="shearch group" @oninput="FilterGroups" />
        <div class="btn-group d-flex mb-1">
            <button class="btn btn-sm btn-outline-danger float-end" @onclick="RemoveModel" title="remove list"><i class="bi bi-x-circle"></i></button>
            <button class="btn btn-sm btn-outline-danger" @onclick="DeleteGroups"><i class="bi bi-trash" title="delete groups"></i></button>
            <button class="btn btn-sm btn-outline-primary" @onclick="SaveList"><i class="bi bi-save" title="save list"></i></button>
        </div>
        <select style="width:100%;height:100%" @oninput="OnSelectGroupsInput" multiple>
            @foreach (var group in filtredGroups)
            {
                if (!string.IsNullOrEmpty(group.Value.TrimedName))
                {
                    <option class="@(IsInBoothLists( group.Value.TrimedName)?"bg-success":"")" 
                    value="@group.Value.TrimedName" title="@group.Value.Name">
                        @group.Value.Channels.Count()-@group.Value.Name
                    </option>
                }
            }
        </select>
    </div>
    <div class="card col " style="height:100%">
        <ChannelsList @ref="channelsList" M3UListModelId="M3UListModelId"></ChannelsList>
    </div>
</div>