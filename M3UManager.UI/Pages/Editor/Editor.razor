@page "/editor"

<div class="btn-group d-flex mb-1">
    @if (Commands.Count() > 0)
    {
        <button class="btn btn-outline-dark" @onclick="Undo" title="undo"><i class="bi bi-arrow-counterclockwise"></i></button>
    }
    @if (m3uService.GroupListsCount() < 2)
    {
        <button class="btn btn-outline-primary" @onclick="OpenFile" title="open M3U file"><i class="bi bi-file-plus"></i></button>
        <button class="btn btn-outline-success" @onclick="ShowXtreamDialog" title="load from Xtream"><i class="bi bi-cloud-download"></i></button>
    }
    @if (m3uService.GroupListsCount() == 2)
    {
        <button class="btn btn-outline-primary" @onclick="(()=>CompareLists())" title="compare lists">
            <i class="bi bi-signpost-split"></i>
        </button>
        <button class="btn btn-outline-primary " @onclick="(()=>CopyToOther(0, 1))" title="move channels left">
            <i class="bi bi-arrow-left-square"></i>
        </button>
        <button class="btn btn-outline-primary" @onclick="(()=>CopyToOther(1, 0))" title="move channels right">
            <i class="bi bi-arrow-right-square"></i>
        </button>
    }
</div>

@if (showXtreamDialog)
{
    <div class="modal d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Load from Xtream Codes</h5>
                    <button type="button" class="btn-close" @onclick="CloseXtreamDialog"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Xtream URL</label>
                        <input type="text" class="form-control" @bind="xtreamUrl" 
                               placeholder="http://server:port/username/password" 
                               disabled="@isLoading" />
                        <div class="form-text">
                            Format: http://server:port/username/password
                        </div>
                    </div>
                    @if (isLoading)
                    {
                        <div class="alert alert-info d-flex align-items-center" role="alert">
                            <div class="spinner-border spinner-border-sm me-2" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <div>
                                <strong>Loading playlist...</strong>
                                <br />
                                <small>Fetching categories and channels from Xtream server. This may take a moment.</small>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            <strong>Error!</strong> @errorMessage
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseXtreamDialog" disabled="@isLoading">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="LoadFromXtream" disabled="@(isLoading || string.IsNullOrWhiteSpace(xtreamUrl))">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                            <span>Loading...</span>
                        }
                        else
                        {
                            <span>Load</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@if (showCacheDialog)
{
    <div class="modal d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5); z-index: 1060;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-archive"></i> Cached Playlist Found
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseCacheDialog"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-info mb-3">
                        <i class="bi bi-info-circle"></i>
                        <strong>A cached playlist is available</strong>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted small">Source URL:</label>
                        <div class="bg-light p-2 rounded border">
                            <small class="text-break">@cachedXtreamUrl</small>
                        </div>
                    </div>
                    @if (cachedDate.HasValue)
                    {
                        <div class="mb-3">
                            <label class="form-label text-muted small">Last Updated:</label>
                            <div class="bg-light p-2 rounded border">
                                <small>
                                    <i class="bi bi-clock"></i> @cachedDate.Value.ToString("MMM dd, yyyy - hh:mm tt")
                                    <span class="text-muted">(@GetTimeAgo(cachedDate.Value))</span>
                                </small>
                            </div>
                        </div>
                    }
                    <div class="alert alert-warning small">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Note:</strong> Using cached data will be faster but may not include latest updates from the server.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" @onclick="CloseCacheDialog">
                        <i class="bi bi-x-circle"></i> Cancel
                    </button>
                    <button type="button" class="btn btn-outline-primary" @onclick="RefreshFromUrl">
                        <i class="bi bi-arrow-clockwise"></i> Refresh from URL
                    </button>
                    <button type="button" class="btn btn-primary" @onclick="LoadCachedPlaylist">
                        <i class="bi bi-check-circle"></i> Use Cached
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<VideoPlayer @ref="videoPlayer" />

<div class="row">
    <CascadingValue Value="this">
        @if (m3uService.GroupListsCount() > 0)
        {
            <div class="col">
                <GroupsList M3UListModelId="0"></GroupsList>
            </div>
        }
        @if (m3uService.GroupListsCount() == 2)
        {

            <div class="card col">
                <GroupsList M3UListModelId="1"></GroupsList>
            </div>
        }
    </CascadingValue>
</div>

