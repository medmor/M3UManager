@page "/editor"

<div class="d-flex" style="height: 100vh; overflow: hidden;">
    <!-- Main Content Area -->
    <div class="flex-grow-1 d-flex flex-column" style="overflow: hidden;">
        <!-- Top Toolbar -->
        <div class="bg-light border-bottom px-3 py-2 d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center gap-2">
                <h5 class="mb-0">
                    <i class="@PageIcon"></i> @PageTitle
                </h5>
                @if (m3uService.GroupListsCount() > 0)
                {
                    <span class="badge bg-primary">@GetFilteredChannelCount() channels</span>
                }
            </div>
            
            <div class="btn-toolbar gap-2">
                @if (m3uService.GroupListsCount() == 0 && !isAutoLoading)
                {
                    <div class="btn-group">
                        <button class="btn btn-sm btn-primary" @onclick="ShowXtreamDialog" title="Load from Xtream Codes">
                            <i class="bi bi-cloud-download"></i> Load Xtream
                        </button>
                        <button class="btn btn-sm btn-outline-primary" @onclick="OpenFile" title="Open M3U file">
                            <i class="bi bi-file-earmark-plus"></i> Open File
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- Playlist Content Area -->
        <div class="flex-grow-1 overflow-auto">
            <CascadingValue Value="this">
                @if (isAutoLoading)
                {
                    <div class="d-flex align-items-center justify-content-center h-100">
                        <div class="text-center p-5">
                            <div class="spinner-border text-primary" style="width: 4rem; height: 4rem;" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <h4 class="mt-4 text-muted">Loading cached playlist...</h4>
                            <p class="text-muted">Please wait</p>
                        </div>
                    </div>
                }
                else if (m3uService.GroupListsCount() == 0)
                {
                    <div class="d-flex align-items-center justify-content-center h-100">
                        <div class="text-center p-5">
                            <i class="bi bi-collection-play text-muted" style="font-size: 80px;"></i>
                            <h3 class="mt-4 text-muted">No Playlist Loaded</h3>
                            <p class="text-muted mb-4">Load a playlist from Xtream Codes or open an M3U file to get started</p>
                            <div class="d-flex gap-3 justify-content-center">
                                <button class="btn btn-primary btn-lg" @onclick="ShowXtreamDialog">
                                    <i class="bi bi-cloud-download"></i> Load from Xtream
                                </button>
                                <button class="btn btn-outline-primary btn-lg" @onclick="OpenFile">
                                    <i class="bi bi-file-earmark-plus"></i> Open M3U File
                                </button>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="h-100">
                        <GroupsList M3UListModelId="0"></GroupsList>
                    </div>
                }
            </CascadingValue>
        </div>
    </div>

    <!-- Right Sidebar - Now Playing Panel -->
    <VideoPlayer @ref="videoPlayer" />
</div>

@if (showXtreamDialog)
{
    <div class="modal d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5); z-index: 2000;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-cloud-download"></i> Load from Xtream Codes
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseXtreamDialog" disabled="@isLoading"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Xtream URL</label>
                        <input type="text" class="form-control form-control-lg" @bind="xtreamUrl" 
                               placeholder="http://server:port/username/password" 
                               disabled="@isLoading" />
                        <div class="form-text">
                            <i class="bi bi-info-circle"></i> Format: http://server:port/username/password
                        </div>
                    </div>
                    @if (isLoading)
                    {
                        <div class="alert alert-info d-flex align-items-center" role="alert">
                            <div class="spinner-border spinner-border-sm me-3" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <div>
                                <strong>Loading playlist...</strong>
                                <br />
                                <small>Fetching Live TV, Movies, and TV Shows. This may take a minute.</small>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Error!</strong> @errorMessage
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseXtreamDialog" disabled="@isLoading">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-primary" @onclick="LoadFromXtream" disabled="@(isLoading || string.IsNullOrWhiteSpace(xtreamUrl))">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span>Loading...</span>
                        }
                        else
                        {
                            <i class="bi bi-download me-1"></i>
                            <span>Load Playlist</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

