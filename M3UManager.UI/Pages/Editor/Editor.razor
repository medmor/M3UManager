@page "/editor"

<div class="btn-group mb-1" style="max-height:30px">
    @if (Commands.Count() > 0)
    {
        <button class="btn btn-sm btn-outline-dark me-1" @onclick="Undo" title="open new list"><i class="bi bi-arrow-counterclockwise"></i></button>
    }
    @if (m3uService.GetGroupsList(0) == null || m3uService.GetGroupsList(1) == null)
    {
        <button class="btn btn-sm btn-outline-primary me-1" @onclick="OpenFile" title="open new list"><i class="bi bi-file-plus"></i></button>
    }
    @if (m3uService.GetGroupsList(0) != null && m3uService.GetGroupsList(1) != null)
    {
        <button class="btn btn-sm btn-outline-primary me-1" @onclick="(()=>CompareLists())" title="compare lists">
            <i class="bi bi-signpost-split"></i>
        </button>
        <button class="btn btn-sm btn-outline-primary me-1" @onclick="(()=>CopyToOther(0, 1))" title="move channels left">
            <i class="bi bi-arrow-left-square"></i>
        </button>
        <button class="btn btn-sm btn-outline-primary me-1" @onclick="(()=>CopyToOther(1, 0))" title="move channels right">
            <i class="bi bi-arrow-right-square"></i>
        </button>
    }
</div>
<div class="row">
    <CascadingValue Value="this">
        @if (m3uService.GetGroupsList(0) != null || m3uService.GetGroupsList(1) != null)
        {
            <div class="col" @onclick="()=>m3uService.SetActiveGroupsList(0)">
                <GroupsList M3UListModelId="0"></GroupsList>
            </div>
        }
        @if (m3uService.GetGroupsList(0) != null && m3uService.GetGroupsList(1) != null)
        {

            <div class="card col" @onclick="()=>m3uService.SetActiveGroupsList(1)">
                <GroupsList M3UListModelId="1"></GroupsList>
            </div>
        }
    </CascadingValue>
</div>

