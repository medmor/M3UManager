@page "/editor"

<div class="row">
    @if (m3uService.GroupListsCount() == 0)
    {
        <button class="btn btn-outline-primary" @onclick="OpenFile">Open</button>
    }
    else if (m3uService.GroupListsCount() > 0)
    {
        <div class="col">
            <GroupsList Id="groupList1" M3UListModel="m3uService.GetModel(0)"></GroupsList>
        </div>
    }
    else if (m3uService.GroupListsCount() == 2)
    {

        <div class="col-1 d-flex flex-column">
            <button class="btn btn-outline-primary" @onclick="(()=>CompareLists())">
                <i class="bi bi-signpost-split"></i>
            </button>
            <button class="btn btn-outline-primary " @onclick="(()=>CopyToOther(m3uService.GetModel(0), m3uService.GetModel(1)))">
                <i class="bi bi-arrow-left-square"></i>
            </button>
            <button class="btn btn-outline-primary" @onclick="(()=>CopyToOther(m3uService.GetModel(1), m3uService.GetModel(0)))">
                <i class="bi bi-arrow-right-square"></i>
            </button>
        </div>
        <div class="col">
            <GroupsList Id="groupList1" M3UListModel="m3uService.GetModel(1)"></GroupsList>
        </div>
    }
</div>
