@page "/editor"

<div class="btn-group d-flex mb-1">
    @if (m3uService.GroupListsCount() < 2)
    {
        <button class="btn btn-outline-primary" @onclick="OpenFile" title="open new list"><i class="bi bi-file-plus"></i></button>
    }
    @if (m3uService.GroupListsCount() == 2)
    {
        <button class="btn btn-outline-primary" @onclick="(()=>CompareLists())" title="compare lists">
            <i class="bi bi-signpost-split"></i>
        </button>
        <button class="btn btn-outline-primary " @onclick="(()=>CopyToOther(m3uService.GetModel(0), m3uService.GetModel(1)))" title="move channels left">
            <i class="bi bi-arrow-left-square"></i>
        </button>
        <button class="btn btn-outline-primary" @onclick="(()=>CopyToOther(m3uService.GetModel(1), m3uService.GetModel(0)))" title="move channels right">
            <i class="bi bi-arrow-right-square"></i>
        </button>
    }
</div>
<div class="row">
    <CascadingValue Value="this">
        @if (m3uService.GroupListsCount() > 0)
        {
            <div class="col">
                <GroupsList M3UListModelId="0"></GroupsList>
            </div>
        }
        @if (m3uService.GroupListsCount() == 2)
        {

            <div class="card col">
                <GroupsList M3UListModelId="1"></GroupsList>
            </div>
        }
    </CascadingValue>
</div>

