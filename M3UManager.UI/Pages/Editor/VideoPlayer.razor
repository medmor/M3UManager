@if (isVisible)
{
    <div class="card position-fixed end-0 top-0 shadow-lg" style="width: 350px; height: 100vh; z-index: 1050; border-radius: 0;">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-2">
            <h6 class="mb-0">
                <i class="bi bi-tv"></i> Now Playing
            </h6>
            <button type="button" class="btn-close btn-close-white btn-sm" @onclick="ClosePlayer"></button>
        </div>
        <div class="card-body p-3 d-flex flex-column" style="overflow-y: auto;">
            <div class="mb-3">
                <div class="d-flex align-items-center mb-2">
                    <i class="bi bi-play-circle-fill text-primary fs-5 me-2"></i>
                    <strong class="text-truncate">@channelName</strong>
                </div>
                <div class="small text-muted mb-1">
                    <span class="badge bg-secondary">@contentType</span>
                </div>
                <div class="small text-muted text-break" style="word-break: break-all;">
                    @streamUrl
                </div>
            </div>
            
            <div class="alert alert-info small mb-0">
                <i class="bi bi-info-circle"></i>
                <strong>Playing in VLC</strong>
                <p class="mb-0 mt-1 small">The stream is playing in VLC Media Player. You can continue browsing and select another channel to switch streams.</p>
            </div>
        </div>
    </div>
}
