@using M3UManager.UI.Components
@using M3UManager.Models

<ChannelsDisplay @ref="channelsDisplay"
               Channels="@Channels"
               SelectedChannel="@selectedChannel"
               OnChannelSelected="OnChannelSelected"
               OnPlay="PlayChannel"
               OnPlayPip="PlayChannelPip"
               OnToggleFavorite="ToggleFavorite"
               OnShowEpisodes="ShowEpisodes"
               IsChannelFavorite="IsChannelInFavorite"
               ShowActions="true"
               ShowSearch="true"
               InitialViewMode="DisplayMode.List" />

<!-- Series Episodes Viewer -->
<SeriesEpisodesViewer @ref="episodesViewer"
                     IsVisible="showEpisodes"
                     OnClose="CloseEpisodes"
                     OnEpisodeSelected="PlayEpisode"
                     UseImageProxy="true" />

<!-- Category Selector -->
<CategorySelector IsVisible="showCategorySelector"
                 Channel="selectedChannelForCategories"
                 OnClose="CloseCategorySelector"
                 OnCategoriesSelected="OnCategoriesSelected" />

@for (int i = 0; i < 100; i++)
{
    <div class="indicator hiden"></div>
}
