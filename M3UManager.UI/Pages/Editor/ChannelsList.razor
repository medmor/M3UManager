@if (Channels != null)
{
    <!-- Channels Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h6 class="mb-0 fw-bold">
            <i class="bi bi-tv"></i> Channels
            <span class="badge bg-secondary ms-1">@Channels.Count()</span>
        </h6>
        @if (selectedChannel != null)
        {
            <div class="btn-group btn-group-sm">
                <button class="btn btn-success" @onclick="PlayChannel" title="Play channel">
                    <i class="bi bi-play-circle-fill"></i>
                </button>
                @if (IsChannelInFavorite())
                {
                    <button class="btn btn-warning" @onclick="RemoveFromFavorites" title="Remove from favorites">
                        <i class="bi bi-star-fill"></i>
                    </button>
                }
                else
                {
                    <button class="btn btn-outline-warning" @onclick="AddToFavorites" title="Add to favorites">
                        <i class="bi bi-star"></i>
                    </button>
                }
                <button class="btn btn-outline-danger" @onclick="RemoveChannels" title="Delete channel">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        }
    </div>

    <!-- Search Box -->
    <div class="mb-3">
        <div class="input-group input-group-sm">
            <span class="input-group-text bg-white">
                <i class="bi bi-search"></i>
            </span>
            <input class="form-control" placeholder="Search channels..." @oninput="FilterChannels" />
            <button class="btn btn-outline-secondary" @onclick="()=>ScrollToFiltred(-1)" disabled="@FilterButtonDisabled()" title="Previous match">
                <i class="bi bi-chevron-up"></i>
            </button>
            <button class="btn btn-outline-secondary" @onclick="()=>ScrollToFiltred(1)" disabled="@FilterButtonDisabled()" title="Next match">
                <i class="bi bi-chevron-down"></i>
            </button>
        </div>
    </div>

    <!-- Channels List -->
    <div id="channels-container" class="channels-container flex-grow-1 overflow-auto border rounded p-2" style="background-color: #fff;">
        @for (int i = 0; i < channelsToShow; i++)
        {
            var channel = Channels[i];
            <div id="@channel.Name" 
                 class="channel-item d-flex align-items-center p-2 mb-1 rounded @OptionClass(channel)" 
                 @onclick="() => ToggleSelectChannel(channel)"
                 style="cursor: pointer; transition: all 0.2s;">
                @if (!string.IsNullOrEmpty(channel.Logo))
                {
                    <img class="channel-logo rounded me-2" 
                         src="@channel.Logo" 
                         alt="logo" 
                         height="40" 
                         width="40"
                         style="object-fit: cover;"
                         onerror="this.style.display='none'" />
                }
                else
                {
                    <div class="bg-secondary rounded me-2 d-flex align-items-center justify-content-center" 
                         style="width: 40px; height: 40px; flex-shrink: 0;">
                        <i class="bi bi-tv text-white"></i>
                    </div>
                }
                <div class="flex-grow-1 text-truncate">
                    <div class="channel-name fw-medium">@channel.Name</div>
                    @if (!string.IsNullOrEmpty(channel.Group))
                    {
                        <small class="text-muted">@channel.Group</small>
                    }
                </div>
            </div>
        }
        
        @if (channelsToShow < Channels.Count())
        {
            <button class="btn btn-sm btn-outline-primary w-100 mt-2" @onclick="LoadMore">
                <i class="bi bi-arrow-down-circle"></i> Load more (@(Channels.Count() - channelsToShow) remaining)
            </button>
        }
    </div>

    @for (int i = 0; i < 100; i++)
    {
        <div class="indicator hiden"></div>
    }
}
