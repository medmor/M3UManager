@using M3UManager.Models

@if (IsVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-star-fill text-warning"></i> Add to Categories
                    </h5>
                    <button type="button" class="btn-close" @onclick="Cancel"></button>
                </div>
                <div class="modal-body">
                    @if (Channel != null)
                    {
                        <div class="alert alert-info mb-3">
                            <i class="bi bi-info-circle"></i>
                            <strong>@Channel.Name</strong>
                            <br />
                            <small class="text-muted">Select one or more categories for this channel</small>
                        </div>
                    }

                    @if (categories == null || categories.Count == 0)
                    {
                        <div class="text-center text-muted py-3">
                            <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                            <p class="mt-2">No categories available</p>
                        </div>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var category in categories)
                            {
                                <label class="list-group-item list-group-item-action d-flex align-items-center" 
                                       style="cursor: pointer;">
                                    <input type="checkbox" 
                                           class="form-check-input me-3"
                                           checked="@selectedCategoryIds.Contains(category.Id)"
                                           @onchange="(e) => ToggleCategorySelection(category.Id, e)" />
                                    <i class="bi @category.Icon me-2"></i>
                                    <span class="flex-grow-1">@category.Name</span>
                                    <span class="badge bg-secondary">@category.Channels.Count</span>
                                </label>
                            }
                        </div>

                        <div class="form-check mt-3">
                            <input type="checkbox" 
                                   class="form-check-input" 
                                   id="selectAll"
                                   checked="@(selectedCategoryIds.Count == categories.Count)"
                                   @onchange="ToggleSelectAll" />
                            <label class="form-check-label" for="selectAll">
                                Select All
                            </label>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="Cancel">
                        <i class="bi bi-x-circle"></i> Cancel
                    </button>
                    <button type="button" 
                            class="btn btn-primary" 
                            @onclick="SaveSelection"
                            disabled="@(selectedCategoryIds.Count == 0)">
                        <i class="bi bi-check-circle"></i> Add to Categories
                    </button>
                </div>
            </div>
        </div>
    </div>
}
